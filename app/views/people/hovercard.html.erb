<%= turbo_frame_tag dom_id(@person, :thumbnail) do %>
  <p>
    <strong>Address:</strong>
    <%= @person.address %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= @person.phone %>
  </p>

  <p>
    <strong>Date of birth:</strong>
    <%= @person.date_of_birth %>
  </p>

  <p>
    <%= link_to "Show this person", @person %>
  </p>

<% end %>